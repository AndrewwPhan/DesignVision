<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cv.designvision.controllers.PatchEditorController">
   <center>
      <TabPane stylesheets="@style.css" tabMinHeight="30.0" tabMinWidth="100.0">
         <tabs>
      
            <Tab closable="false" style="-fx-font-size: 16; -fx-font-weight: bold;" text="Edit Patch">
               <content>
                  <VBox alignment="CENTER" spacing="30.0" styleClass="preset-colors-panel">
                     <Label styleClass="preset-title" text="Patch Editor">
                        <font>
                           <Font name="System Bold" size="48.0" />
                        </font>
                     </Label>
                     <HBox alignment="CENTER">
                        <children>
                           <Pane fx:id="patchContainer" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: Magenta;" />
                        </children>
                     </HBox>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onNew" prefHeight="50.0" prefWidth="75.0" text="New">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onPrevious" prefHeight="50.0" prefWidth="75.0" text="Prev">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onNext" prefHeight="50.0" prefWidth="75.0" text="Next">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onDelete" prefHeight="50.0" prefWidth="75.0" text="Delete">
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
